@model CountExp
<p class="text-center">Вы ввели число=:@Model.Data</p>
<p class="text-center">Степени=:@Model.Degree</p>
<p class="text-center">Модуля:=@Model.Module</p>
<p class="text-center">И получили:=@Model.Res</p>

<h3>Ход вычисления</h3>
<table class="table-bordered table-striped">
    <thead>
        <tr>
            <th>Бинарное представление степени</th>
            <th>Решение по модулю</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.TempRes.Count(); i++)
        {
            <tr>
                <td>@Model.Counts[i]</td>
                <td>@Model.TempRes[i] mod @Model.Module</td>
            </tr>
        }
    </tbody>
</table>
@Html.Partial("Footer")
